/*Intuition :-
    Ekhane problem e bola hoise je amader ke k size er fibonacci series toiri
    korte hobe jar last value ta hobe n . Total koto gula emon series create 
    kora possible . 

    Ei proshne fibonacci er code chaliye dekha jay k > 30 hole fibonacci er
    value 5 * 10^5 theke beshi hoye jay . Amader n er value 1e5 dewa ache .

    Erpore brute force way te O(n*k) time complexity teh prottek ta fibonacci
    series ber kore cnt++ kora hoise .
*/


void giveMeMyGloryBack() {
    ll n , k ; cin >> n >> k ; ll ans = 0 ;

    if(k>30){
        cout << 0 << endl ;
    }else{
        for(int i = 0 ; i <= n ; i++){
            ll second = n ; ll first = i ; 
            bool checked = true ;
            for(int j = 0 ; j < k-2 ; j++){ 
                ll temp = second - first ;
                second = first ; first = temp ;
                if(first<=second and first>=0) continue ;
                else{
                    checked = false ; break ;
                }

            }
            if(checked) ans++ ;
        }
    cout << ans << endl ;
    }
}
